= form_for @producer do |f|
  -if @producer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@producer.errors.count, "error")} prohibited this producer from being saved:"
      %ul
        - @producer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :notes
    = f.text_area :notes, :rows => 4
  .actions
    = f.submit 'Save', :class => "btn-success"
