= form_for @wine do |f|
  -if @wine.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wine.errors.count, "error")} prohibited this wine from being saved:"
      %ul
        - @wine.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :vintage
    = select("wine", "vintage", @vintages)
  .field
    = f.label :producer
    = collection_select(:wine, :producer_id, Producer.all, :id, :name) 
  .field
    = f.label :appellation
    = f.text_field :appellation
  .field
    = f.label :notes
    = f.text_area :notes, :rows => 4
  .actions
    = f.submit 'Save', :class => "btn-success"
